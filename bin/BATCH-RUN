# !/usr/bin/env bash

BASE=$(pwd)
BASEDIR='experiments'
IDS=(pilot-006)
STORAGE='/home/petrucci/data'

if [ -z ${STORAGE+x} ]; then
    echo "no storage set.";
    echo "please, set it to the same of basedir `$BASEDIR` if you want the storage to be ignored."
    exit 1
fi

for ID in "${IDS[@]}"
do

    BASEDIR=`cd $BASEDIR; pwd`
    STORAGE=`cd $STORAGE; pwd`
    
    CONFIG=$BASEDIR/$ID'.json'
    LOGDIR=$BASEDIR
    /bin/dket-experiment-run --config $CONFIG\
        --log-level DEBUG\
        --log-to-stderr --force\
        --logdir $LOGDIR
    
    if [ "$STORAGE" = "$BASEDIR" ]; then
        echo "storage is the same of basedir (no storage). ";
    else
        echo "STORAGE IS $STORAGE"
    	echo 'compressing and removing dumps.'
	cd $LOGDIR/$ID/eval
	echo $(pwd)
        tar -zcvf dump.tar.gz dump
    	gvfs-trash dump
	cd $BASE
	echo $(pwd)
	echo 'cleaning up $BASEDIR/$ID'
        cp $CONFIG $STORAGE
        mv $CONFIG'.log' $STORAGE
        mv $BASEDIR/$ID $STORAGE
    fi

done
echo 'done'
